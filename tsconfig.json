{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "lib": [
            "es2024",
            "dom",
        ],
        "rootDir": "./src/",
        "sourceMap": true,
        "outFile": "./dist/index.js",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "./node_modules/",
    ],
    "include": [
        "./src/ts/**/*.ts",
        "./src/index.js",
        "./src/tests/",
    ]
}